<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sist.ex0911_secure.mapper.MemberMapper">

  <select id="login" resultType="com.sist.ex0911_secure.vo.MemVO" parameterType="String">
    select * from member_t
    WHERE m_id = #{mid}
  </select>

  <!-- 회원가입기능 -->
  <insert id="reg" parameterType="com.sist.ex0911_secure.vo.MemVO" useGeneratedKeys="true" keyProperty="m_idx"> 
    INSERT INTO member_t(m_id, m_pw, m_name)
    VALUES(#{m_id}, #{m_pw}, #{m_name})
  </insert>

</mapper>